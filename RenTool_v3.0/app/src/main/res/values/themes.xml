<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RenTool" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#000000</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>


    </style>
    
    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    
    <style name="roundImageView" parent="" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/transparent</item>
    </style>

    <style name="datePickerStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="colorAccent">@color/yellow</item>                   <!--header background-->
        <item name="android:windowBackground">#313131</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/yellow</item> <!--selected day-->
        <item name="android:textColorPrimary">#CACED1</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/yellow</item>    <!--days of the week-->
    </style>

    
</resources>